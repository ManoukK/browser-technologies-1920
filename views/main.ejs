<form>
    <fieldset>
        <legend>Persoonlijke gegevens</legend>
      
            <label for="fname"> 1/10 Naam:
                <input type="text" id="name" name="q1" value="<%= queries.q1 %>"> 
            </label>

            <br>
      
            <label for="email"> 2/10 E-mail adres: 
                <input type="text" id="email" name="q2" value="<%= queries.q2 %>">
            </label>
      
            <br>
      
            <label for="telnmr"> 3/10 Telefoon nummer: 
                <input type="text" id="telnmr" name="q3" inputmode="numeric" pattern="[0-9]*" value="<%= queries.q3 %>">
            </label>

            <br>

              <label for="geboorteDatum"> 4/10 Geboorte datum: 
                    <input type="text" id="geboorteDatum" name="q4a" inputmode="numeric" pattern="[0-9]{2}" maxlength="2" placeholder="DD" value="<%= queries.q4a %>">
                    /
                    <input type="text" id="geboorteDatum" name="q4b" inputmode="numeric" pattern="[0-9]{2}" maxlength="2" placeholder="MM" value="<%= queries.q4b %>">
                    /
                    <input type="text" id="geboorteDatum" name="q4c" inputmode="numeric" pattern="[0-9]{4}" maxlength="4" placeholder="JJJJ" value="<%= queries.q4c %>">
            </label>

            <br>
